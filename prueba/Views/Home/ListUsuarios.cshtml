@{
    Layout = "";
}
    <table id="tabla_usuarios">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody id="tabla_usuarios_list">
            @if (ViewBag.Usuarios > 0)
            {
                @foreach (var User in ViewBag.ListUsers)
                {
                    <tr>
                        <td>@User.Nombres</td>
                        <td>@User.Apellidos</td>
                        <td>@User.Estado</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        <h2>No se han encontrado usuarios</h2>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="col-md-12 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
    </div>